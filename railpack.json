{
  "$schema": "https://schema.railpack.com",
  "steps": {
    "build": {
      "commands": [ "...", {
          "src": "*",
          "dest": "/apps/holo/*"
        } ]
    }
  },
  "deploy": {
    "base": {
      "image": "docker.io/redplanethq/holo:latest"
    },
    "inputs": [
      {
        "step": "build",
        "include": [ "." ]
      }
    ],
    "startCommand": "cd /apps/holo && npm run start"
  }
}